<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Kitowski.Settings.SettingsActivity" >

    <CheckBox
        android:id="@+id/checkbox_displaylegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/settings_dislpaylegend"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/checkbox_displayyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner_selectYear"
        android:layout_below="@+id/checkbox_displaylegend"
        android:layout_marginTop="44dp"
        android:text="@string/settings_selectyear"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinner_selectYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkbox_displaylegend"
        android:layout_below="@+id/checkbox_displayyear"
        android:layout_marginTop="22dp" />

    <CheckBox
        android:id="@+id/checkbox_selectgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner_selectYear"
        android:layout_below="@+id/spinner_selectYear"
        android:layout_marginTop="44dp"
        android:text="@string/settings_selectgroup"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/spinner_selectgroup_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkbox_selectgroup"
        android:layout_below="@+id/checkbox_selectgroup"
        android:layout_marginTop="22dp" />

    <Spinner
        android:id="@+id/spinner_selectgroup_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner_selectgroup_letter"
        android:layout_below="@+id/spinner_selectgroup_letter"
        android:layout_marginTop="22dp" />

</RelativeLayout>
