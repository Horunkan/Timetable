<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.maciejkitowski.timetable.MainActivity">

    <Spinner
        android:id="@+id/Date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/Group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Date"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:textAlignment="center" />

    <ProgressBar
        android:id="@+id/LoadingBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Group"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/AlertText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LoadingBar"
        android:text="[ALERT DESCRIPTION]"
        android:theme="@style/AlertTextView"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/RefreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/floatingButton_margin"
        android:layout_marginLeft="@dimen/floatingButton_margin"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorAlert"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/stat_notify_sync_noanim" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/CalendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/floatingButton_margin"
        android:layout_marginRight="@dimen/floatingButton_margin"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@android:color/holo_green_dark"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <ScrollView
        android:id="@+id/ScheduleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Group">

        <RelativeLayout
            android:id="@+id/Timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/Hours"
                android:layout_width="@dimen/timestamp_hour_width"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="7:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="8:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="9:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="10:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="11:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="12:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="13:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="14:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="15:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="16:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="17:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="18:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="19:00"
                    android:theme="@style/Timestamp_hour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/timestamp_hour_height"
                    android:text="20:00"
                    android:theme="@style/Timestamp_hour" />

                <!-- Empty view (Floating buttons may cause view problems) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Lines"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toEndOf="@id/Hours">

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</android.widget.RelativeLayout>